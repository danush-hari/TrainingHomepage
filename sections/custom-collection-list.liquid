{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media only screen and (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }
  }
{% endstyle %}
<section class="section-{{ section.id }}-padding">
  <div class="color-{{ section.settings.color_scheme }} gradient">
    <div class="collection-list--new">
      <div class="collection-list-content">
        <div class="content-wrapper">
          {% if section.settings.heading != blank %}
            <div class="collection-list--heading">
              <h2>{{ section.settings.heading }}</h2>
            </div>
          {% endif %}
    
          {% if section.settings.description != blank %}
            <div class="collection-list--description">
              {{ section.settings.description }}
            </div>
          {% endif %}
        </div>
      </div>

      <div class="collection-list--blocks color-{{ section.settings.card_color_scheme }} gradient">
        {% for block in section.blocks %}
          <div class="collection-list--block" {{ block.shopify_attributes }}>
            <div class="collection-list--image-wrapper">
              {% if block.settings.image %}
                <img
                  src="{{ block.settings.image | image_url: width: 800 }}"
                  alt="{{ block.settings.title | escape }}"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                  loading="lazy"
                  class="collection-list--image"
                >
                {% else %}
                <div class="collection-list--image placeholder">
                  {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
        
              <div class="collection-list--content">
                <div>
                  {% if block.settings.sub_title %}
                    <p class="collection-list--subtitle">{{ block.settings.sub_title }}</p>
                  {% endif %}
                  {% if block.settings.title %}
                    <h3 class="collection-list--title">{{ block.settings.title }}</h3>
                  {% endif %}
                </div>
                {% if block.settings.button_text and block.settings.button_url %}
                  <a href="{{ block.settings.button_url }}" class="button">
                    {{ block.settings.button_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
        
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Collection List New",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default":"<p>Explore our top-rated emergency kits </p>"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "color_scheme",
      "id": "card_color_scheme",
      "label": "Color Scheme Block level",
      "default": "scheme-6"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "content_block",
      "name": "Content Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "sub_title",
          "label": "Sub-title"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection List New",
      "category": "Custom",
      "blocks": [
        {
          "type": "content_block"
        }
      ]
    }
  ]
}
{% endschema %}
