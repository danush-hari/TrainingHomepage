{{ 'component-product-monogram-popup.css' | asset_url | stylesheet_tag }}

<product-monogram-popup id="ProductMonogramPopup-{{ section.id }}" class="product-monogram__modal">
  <div class="product-monogram__container">
    <div class="product-monogram__header">
      <button id="MonogramModalClose-{{ section.id }}" class="product-monogram__close-button" type="button">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M15 5L5 15M5 5L15 15" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>

    <div class="product-monogram__content">
      <!-- Preview Image with Monogram -->
      <div class="product-monogram__preview">
        <div class="product-monogram__preview-image">
          <img src="{{ product.featured_image | image_url }}" alt="{{ product.title }}" class="product-monogram__product-image" width="500" height="500">
          <div class="product-monogram__letter-overlay">
            <span id="monogram-preview-text">A</span>
          </div>
        </div>
      </div>
      
      <!-- Style Selection -->
      <div class="product-monogram__section">
        <h3 class="product-monogram__section-title">Select a Style</h3>
        <div class="product-monogram__styles">
          <div class="product-monogram__style-option product-monogram__selected" data-style="AB">
            <span class="product-monogram__style-svg">
              <svg viewBox="0 0 60 40" xmlns="http://www.w3.org/2000/svg">
                <text x="30" y="28" font-family="Georgia, serif" font-size="24" font-weight="bold" text-anchor="middle" fill="black">AB</text>
                <rect x="10" y="32" width="40" height="2" fill="black"/>
              </svg>
            </span>
          </div>
          <div class="product-monogram__style-option" data-style="ABC">
            <span class="product-monogram__style-svg">
              <svg viewBox="0 0 60 40" xmlns="http://www.w3.org/2000/svg">
                <text x="30" y="25" font-family="Helvetica, sans-serif" font-size="18" letter-spacing="1" text-anchor="middle" fill="black">ABC</text>
                <path d="M15,30 H45" stroke="black" stroke-width="1" stroke-dasharray="2,1"/>
              </svg>
            </span>
          </div>
          <div class="product-monogram__style-option" data-style="GDC">
            <span class="product-monogram__style-svg">
              <svg viewBox="0 0 60 40" xmlns="http://www.w3.org/2000/svg">
                <circle cx="30" cy="20" r="16" fill="transparent" stroke="black" stroke-width="1.5"/>
                <text x="30" y="25" font-family="Times New Roman, serif" font-size="14" text-anchor="middle" fill="black">GDC</text>
              </svg>
            </span>
          </div>
          <div class="product-monogram__style-option" data-style="KATIE">
            <span class="product-monogram__style-svg">
              <svg viewBox="0 0 60 40" xmlns="http://www.w3.org/2000/svg">
                <text x="30" y="25" font-family="Brush Script MT, cursive" font-size="18" font-style="italic" text-anchor="middle" fill="black">Katie</text>
                <path d="M18,30 Q30,20 42,30" stroke="black" stroke-width="1" fill="none"/>
              </svg>
            </span>
          </div>
        </div>
      </div>

      <!-- Text Input -->
      <div class="product-monogram__section">
        <h3 class="product-monogram__section-title">Enter Text - Up to <span class="product-monogram__max-chars">2</span> letters</h3>
        <div class="product-monogram__text-field">
          <input type="text" class="product-monogram__text-input" maxlength="2" placeholder="A" value="">
          <div class="product-monogram__character-count">2 characters left</div>
        </div>
      </div>

      <!-- Color Selection -->
      <div class="product-monogram__section">
        <h3 class="product-monogram__section-title">Select Color</h3>
        <div class="product-monogram__colors">
          <div class="product-monogram__color-option product-monogram__color-white product-monogram__selected" data-color="white" style="background-color: #FFFFFF; border: 1px solid #e0e0e0;"></div>
          <div class="product-monogram__color-option product-monogram__color-black" data-color="black" style="background-color: #000000;"></div>
          <div class="product-monogram__color-option product-monogram__color-blue" data-color="blue" style="background-color: #1a4692;"></div>
          <div class="product-monogram__color-option product-monogram__color-green" data-color="green" style="background-color: #1d5e41;"></div>
          <div class="product-monogram__color-option product-monogram__color-pink" data-color="pink" style="background-color: #ff0080;"></div>
        </div>
      </div>

      <!-- Acknowledgement -->
      <div class="product-monogram__section">
        <div class="product-monogram__checkbox-container">
          <input type="checkbox" id="monogram-acknowledge" class="product-monogram__checkbox">
          <label for="monogram-acknowledge" class="product-monogram__checkbox-label">
            I acknowledge that monogrammed items are not eligible for returns or exchanges
          </label>
        </div>
      </div>

      <!-- Notice -->
      <div class="product-monogram__notice">
        Please allow 5-10 business days for monogrammed styles. Kindly note when monogramming on pocket, the pocket will be sewn shut.
      </div>

      <!-- Add to Cart Button -->
      <button disabled type="button" class="product-monogram__add-to-cart">ADD TO CART</button>
    </div>
  </div>
</product-monogram-popup>

<script src="{{ 'component-product-monogram-popup.js' | asset_url }}" defer="defer"></script> 